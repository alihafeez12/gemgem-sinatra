.row
  .col-sm-6.col-sm-offset-3
    .page-header.text-center
      h1 New Post!

    = vertical_form(model: model.contract, action: url) do |f|
      .row
        .col-sm-6
          = f.input_group :title, label: "Title" do |input|
            =input.group_addon('<input type="checkbox" value="1"/>')
            =input.control
        .col-sm-6
          = f.input :url_slug, label: "URL Slug"

      = f.input_group :url_slug, label: "URL", left_addon: 'http://', right_addon: '.com'

      = f.select :select_roles, label: "Roles", collection: [[nil, 'Choose a role'], [1, "Admin"], [2, "Owner"], [3, "Maintainer"]]

      = f.inline_radio :select_roles, label: "Inline radios", collection: [[1, "Yes"], [2, "No"], [3, "I really don't know"]]

      = f.inline_checkbox :select_roles, label: "Inline checkboxes", collection: [[1, "Option 1"], [2, "Option 2"], [3, "Option 3"]]

      hr
      h4 Checkboxes in columns!
      .row
        .col-sm-4
          = f.checkbox :select_roles, label: "Column 1", collection: [[1, "Option 1"], [2, "Option 2"], [3, "Option 3"]]
        .col-sm-4
          = f.checkbox :select_roles, label: "Column 2", collection: [[1, "Option 1"], [2, "Option 2"], [3, "Option 3"]]
        .col-sm-4
          = f.checkbox :select_roles, label: "Column 3", collection: [[1, "Option 1"], [2, "Option 2"], [3, "Option 3"]]
      hr

      = f.textarea :content, placeholder: "And your story...", rows: 9
      = f.checkbox :is_public, label: "Public?", value: "1"

      = f.submit value: "Submit!", class: ['btn-lg']

    .page-header.text-center
      h1 Inline Form

    = inline_form(model: model.contract, action: url) do |f|
      = f.input :title
      = f.input :url_slug, placeholder: "URL slug", label_options: { class: ["sr-only"] }
      =f.submit(value: "Submit!")

.page-header.text-center
  h1 Horizontal Form

= horizontal_form(model: model.contract, action: url) do |f|
  = f.input_group :title, label: "Title", right_btn: "<a href='#' class='btn btn-default'>Suprise Me</a>"

  = f.input :url_slug

  = f.textarea :content, placeholder: "And your story...", rows: 9

  = f.select :select_roles, collection: [["Admin", 1], ["Owner", 2], ["Maintainer", 3]]

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit value: "Submit!", class: ['btn-lg']